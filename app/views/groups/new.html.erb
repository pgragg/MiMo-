<% if current_user %> 
  <div class="col-md-8 col-sm-8 center">
   <%= form_for [current_user.groups.new] do |f| %><!--   , remote: true -->
     <div class="form-group">
       <%= f.label :name, "Group Name" %>
       <%= f.text_field :name, class: 'form-control', placeholder: "eg. \"College Roomies\"" %>
     </div>
     <div class="form-group">
       <%= f.label :move_date, "Move in date" %>
       <%= f.text_field :move_date, class: 'form-control', placeholder: "eg. \"2016-06-19\"" %>
     </div>
     <div class="form-group">
       <%= f.label :address, "Moving To..." %>
       <%= f.text_field :address, class: 'form-control', placeholder: "eg. \"241 West 126th street\""  %>
     </div>
     <div class="form-group">
       <%= f.label :zip_code %>
       <%= f.text_field :zip_code, class: 'form-control', placeholder: "eg. \"10024\"" %>
     </div>
     <div class="form-group text-center">
       <%= f.submit "Save", class: 'btn  ' %>
     </div>
   <% end %>
  </div>
<% end %> 

