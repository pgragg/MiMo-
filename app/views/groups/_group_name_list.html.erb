<% if group %> 
  <% if group_members %> 
    <% group_members.each do |member| %> 
      <% if member.first_name && member.last_name %> 
        <%="#{member.first_name} #{member.last_name[0]}., "%>
      <% end %> 
    <%end%>
    <br> 
    <% if group.address %> 
        <%="Address: #{group.address}"%>
    <% end %> 
    <br>
    <% if group.budget %> 
        <%="Budget: #{group.budget}"%>
    <% end %>
    <br> 
  <% end %> 
<% end %> 